<%= form_with model: [ @article, @article.comments.build ] do |form| %>
<div class= "form-group mx-auto w-50">

  <p>
    <%= form.text_area :body, class: "form-control", placeholder: "Add a new Comment" %>
  </p>

  <p >
    <%= form.text_field :Name, class: "form-control required", placeholder: "Name" %>
  </p>

  <p >
    <%= form.submit class: "btn btn-success form-control border-2 "  %>
  </p>
  </div>
<% end %>
