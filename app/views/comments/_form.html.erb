<%= form_with model: [ @article, @article.comments.build ] do |form| %>
<div class= "form-group">
  <p>
    <%= form.label :Name %><br>
    <%= form.text_field :Name, class: "form-control" %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body, class: "form-control" %>
  </p>
  <p>
    <%= form.submit class: "btn btn-danger" %>
  </p>
  </div>
<% end %>
